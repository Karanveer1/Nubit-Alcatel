<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/externalGames_cardview"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="#ffffff">

    <RelativeLayout
        android:id="@+id/externalGames_items_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/externalGames_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/banner_three"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

        <TextView
            android:id="@+id/txt_externalGames_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/externalGames_icon"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="News Title"
            android:textColor="@color/light_black"
            android:textSize="12sp" />

<!--        <include-->
<!--            android:id="@+id/layout_admob"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            layout="@layout/layout_admob" />-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>