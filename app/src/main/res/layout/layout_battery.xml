<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdBatteryData"
    android:layout_width="0dp"
    android:layout_height="@dimen/_110sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="0dp"
    android:layout_weight="1"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginLeft="@dimen/_4sdp"
    app:layout_constraintStart_toStartOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBattery"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:srcCompat="@drawable/battery_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalBattery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="0%"
                android:textColor="@color/black"
                android:fontFamily="@font/font_regular"
                android:textSize="38sp"
                app:layout_constraintVertical_chainStyle="spread" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalBatteryTimeRem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/font_regular"
                android:text="2 hours and 12 minutes remaining"
                android:textColor="@color/colorGreyA4"
                android:textSize="10sp"
                app:layout_constraintVertical_chainStyle="spread" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>