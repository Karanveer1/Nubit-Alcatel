<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:cardCornerRadius="11dp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/heading_margin_card"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/scoregame_ref_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_scoregame_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/heading_margin_top"
                    android:layout_marginBottom="@dimen/heading_margin_bottom"
                    android:text="Score"
                    android:textAllCaps="false"
                    android:textColor="@color/nubit_headingColor"
                    android:textSize="@dimen/nubit_heading_size" />
                <RelativeLayout
                    android:id="@+id/ref_scoregame_spin_container"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/scoregame_news_ref"
                        android:layout_width="@dimen/ref_btn_size"
                        android:layout_height="@dimen/ref_btn_size"
                        android:padding="@dimen/ref_btn_padding"
                        android:visibility="gone"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/read_more_margin"/>

                    <!--  <ImageButton
                          android:id="@+id/topapps_spinner"
                          style="?android:attr/actionOverflowButtonStyle"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:layout_alignParentTop="true"
                          android:layout_centerVertical="true"
                          android:layout_marginRight="@dimen/spinner_right_margin" />--></RelativeLayout>

<!--                <include-->
<!--                    android:id="@+id/devider_below_scoregame_ref"-->
<!--                    layout="@layout/view_divider"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="2dp"-->
<!--                    android:layout_below="@+id/btn_scoregame_title"-->
<!--                    android:layout_marginTop="10dp" />-->
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvScoreGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>